{
    "name": "miyasinarafat/design-patterns-with-php",
    "description": "Design patterns with PHP",
    "keywords": [
        "miyasinarafat",
        "design-patterns",
        "php"
    ],
    "homepage": "https://github.com/miyasinarafat/design-patterns-with-php",
    "license": "MIT",
    "authors": [
        {
            "name": "MD Iyasin Arafat",
            "email": "miyasinarafat@gmail.com",
            "homepage": "https://github.com/miyasinarafat"
        },
        {
            "name": "Contributors",
            "homepage":"https://github.com/miyasinarafat/design-patterns-with-php/graphs/contributors"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "miyasinarafat\\DesignPatterns\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "miyasinarafat\\DesignPatterns\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
